# AgentX 生产环境配置文件
# ===============================
# 外部数据库配置 - 配置此项将使用外部数据库，容器内不启动PostgreSQL
DB_HOST=your-database-server.com
DB_PORT=5432
DB_NAME=agentx
DB_USERNAME=agentx_user
DB_PASSWORD=your_secure_password

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://your-domain.com/oauth/github/callback

# GitHub 目标仓库配置
GITHUB_TARGET_USERNAME=your-github-username
GITHUB_TARGET_REPO_NAME=your-repo-name
GITHUB_TARGET_TOKEN=your_github_token

# MCP网关配置
MCP_GATEWAY_URL=http://your-mcp-gateway:8005

# 高可用配置
HIGH_AVAILABILITY_GATEWAY_URL=http://your-api-gateway:8081
HIGH_AVAILABILITY_API_KEY=your_api_key

# S3对象存储配置
S3_ENDPOINT=https://your-s3-endpoint.com
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET_NAME=your-bucket-name
S3_REGION=your-region

# SSO配置
SSO_COMMUNITY_BASE_URL=http://your-sso-server:8080
SSO_COMMUNITY_APP_KEY=your_sso_app_key
SSO_COMMUNITY_APP_SECRET=your_sso_app_secret
SSO_COMMUNITY_CALLBACK_URL=http://your-domain.com/sso/community/callback

# 邮件配置
MAIL_SMTP_HOST=smtp.your-mail-server.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USERNAME=your_email@domain.com
MAIL_SMTP_PASSWORD=your_email_password